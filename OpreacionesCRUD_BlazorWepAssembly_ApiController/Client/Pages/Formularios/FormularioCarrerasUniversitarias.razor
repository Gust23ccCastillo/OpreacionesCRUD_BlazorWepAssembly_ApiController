<EditForm Model="@_carreraUniversidad" OnValidSubmit="@OnValidSumit">
    <div class="form-field">
         <label>Nombre De la Carrera Universitaria:</label>
         <div>
             <InputText @bind-Value="@_carreraUniversidad.NombreCarrera"/>
             <ValidationMessage For="@(()=>_carreraUniversidad.NombreCarrera)"/>
         </div>

          <label>Codigo Asignado a la Carrera Universitaria:</label>
         <div>
             <InputText @bind-Value="@_carreraUniversidad.CodigoCarrera"/>
             <ValidationMessage For="@(()=>_carreraUniversidad.CodigoCarrera)"/>
         </div>

         
     </div>
     <button type="submit" class="btn btn-success">@NombreBoton</button>
     <DataAnnotationsValidator/>
</EditForm>

@code {
    [Parameter] public CarrerasTotalesUni _carreraUniversidad { get; set; } = new CarrerasTotalesUni();
    [Parameter] public string NombreBoton { get; set; } = "Agregar Carrera";
    [Parameter] public EventCallback OnValidSumit { get; set; }
}
